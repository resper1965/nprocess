# Environment
ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8008

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
# or use GOOGLE_API_KEY for Vertex AI

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/admin_control_plane

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# API Key Encryption
API_KEY_ENCRYPTION_KEY=your-encryption-key-32-chars-minimum

# Google Cloud Services
CLOUD_BILLING_ACCOUNT_ID=your-billing-account-id
CLOUD_MONITORING_PROJECT_ID=your-project-id
SECRET_MANAGER_PROJECT_ID=your-project-id

# Integration Options
ENABLE_GOOGLE_DRIVE=true
ENABLE_SHAREPOINT=false
ENABLE_NOTEBOOKLM=true

# Google Drive (if enabled)
GOOGLE_DRIVE_FOLDER_ID=your-folder-id

# Microsoft Graph (if SharePoint/OneDrive enabled)
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret

# CORS
CORS_ORIGINS=http://localhost:3000,https://admin-dashboard.example.com

# Logging
LOG_LEVEL=INFO
