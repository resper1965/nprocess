# ==============================================================================
# ComplianceEngine Environment Variables
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE
# ------------------------------------------------------------------------------
POSTGRES_USER=compliance
POSTGRES_PASSWORD=compliance_pass_2024
POSTGRES_DB=compliance_engine
DATABASE_URL=postgresql://compliance:compliance_pass_2024@postgres:5432/compliance_engine

# ------------------------------------------------------------------------------
# REDIS
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# ------------------------------------------------------------------------------
# GOOGLE CLOUD / VERTEX AI
# ------------------------------------------------------------------------------
GCP_PROJECT_ID=nprocess
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-service-account.json

# Vertex AI Search
VERTEX_AI_SEARCH_LOCATION=global
VERTEX_AI_DATA_STORE_ID=regulations-datastore

# ------------------------------------------------------------------------------
# JWT / AUTHENTICATION
# ------------------------------------------------------------------------------
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ------------------------------------------------------------------------------
# API KEYS ENCRYPTION
# ------------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_KEY_ENCRYPTION_KEY=your-32-byte-encryption-key-change-in-production

# ------------------------------------------------------------------------------
# API CONFIGURATION
# ------------------------------------------------------------------------------
LOG_LEVEL=info
ENABLE_CORS=true

# Admin Control Plane
ALLOWED_ORIGINS=http://localhost:3001

# ------------------------------------------------------------------------------
# CLIENT PORTAL (Next.js)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8008
NEXT_PUBLIC_RAG_API_URL=http://localhost:8000
NODE_ENV=development

# ------------------------------------------------------------------------------
# STRIPE (for billing - optional)
# ------------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ------------------------------------------------------------------------------
# EMAIL (optional - for notifications)
# ------------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@complianceengine.com

# ------------------------------------------------------------------------------
# CLOUD STORAGE (optional)
# ------------------------------------------------------------------------------
GCS_BUCKET_NAME=compliance-engine-documents

# ------------------------------------------------------------------------------
# MONITORING (optional)
# ------------------------------------------------------------------------------
SENTRY_DSN=https://your-sentry-dsn
